<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/main_logo"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant Doctor"
        android:textStyle="bold|italic"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#00CC99"/>

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:padding="3dp"
        android:layout_gravity="center_horizontal">

        <TableRow>
            <RelativeLayout
                android:id="@+id/layout_btnSearch"
                android:onClick="onClick">

                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icn_search"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/imgSearch"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_btnDiagnosis"
                android:onClick="onClick"
                android:layout_marginLeft="130dp">

                <ImageView
                    android:id="@+id/imgDiagnosis"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icn_diagnosis"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/imgDiagnosis"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </TableRow>

        <TableRow
            android:layout_marginTop="40dp">
            <RelativeLayout
                android:id="@+id/layout_btnStatistic"
                android:onClick="onClick">

                <ImageView
                    android:id="@+id/imgStatistic"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icn_statistic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Statistic"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/imgStatistic"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_btnInformation"
                android:onClick="onClick"
                android:layout_marginLeft="130dp">

                <ImageView
                    android:id="@+id/imgInformation"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icn_information"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/imgInformation"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </TableRow>

    </TableLayout>


</LinearLayout>